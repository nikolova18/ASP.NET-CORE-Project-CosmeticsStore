@model IndexViewModel

@{
    ViewBag.Title = "Home Page";
}


@if (!Model.Products.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to Divine Beauty, your best choice for quality cosmetics!</h1>
        <p class="lead">There are no products in the system currently available.</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Products" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add product</a>
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Products.Count; i++)
        {
            var product = Model.Products[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" src="@product.ImageUrl" alt="@product.Brand @product.Name">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">@product.Brand  @product.Name @product.Quantity</a></h5>
                </div>
            </div>
        }
    </div>

    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="row">
    <div class="col-12 text-center">
        <button class="btn btn-primary" id="statistics-button">Show Statistics</button>
    </div>
</div>

<div class="jumbotron d-none" id="statistics">
    <div class="row">
        <h2 class="col-md-4 text-center" id="total-products"></h2>
        <h2 class="col-md-4 text-center" id="total-users"></h2>
        <h2 class="col-md-4 text-center" id="total-purchase"></h2>
    </div>
</div>

@section Scripts
{
    <script>
        $('#statistics-button').on('click', ev => {
            $.get('/api/statistics', (data) => {
                $('#total-products').text(data.totalProducts + " Products");
                $('#total-users').text(data.totalUsers + " Users");
                $('#total-purchase').text(data.totalPurchase + " Purchase");
                $('#statistics').removeClass('d-none');
                $('#statistics-button').hide();
            });
        });
    </script>
}


