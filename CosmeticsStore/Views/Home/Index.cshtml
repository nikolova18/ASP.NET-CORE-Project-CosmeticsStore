@model List<LatestProductServiceModel>

    @{
        ViewBag.Title = "Divine beauty";
    }


    @if (!Model.Any())
    {
        <div class="jumbotron">
            <h1 class="display-4">Добре дошли в Divine Beauty, най-добрия избор за качествена козметика!</h1>
            <p class="lead"> В системата няма продукти в момента.</p>
            <hr class="my-4">
            <p class="lead">
                <a asp-controller="Products" asp-action="Add" class="btn btn-danger btn-lg" role="button">Добави продукт</a>
            </p>
        </div>
    }

    <div class="mb-5"></div>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count; i++)
            {
                var product = Model[i];
                <div class="carousel-item text-center @(i == 0 ? "active" : string.Empty)">
                    <img class="img-fluid rounded" src="@product.ImageUrl" alt="@product.Brand @product.Name">
                    <div class="carousel-caption d-none d-md-block">
                        <h5><a class="btn btn-danger" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" asp-route-information="@product.GetInformation()">@product.Brand  @product.Name </a></h5>
                    </div>
                </div>
            }
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="mb-5"></div>

